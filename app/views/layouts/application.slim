    = csp_meta_tag
    link rel="icon" href="/favicon.png"
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    link href="https://fonts.googleapis.com/css?family=Oxygen" rel="stylesheet"
  body
