      = link_to image_tag('logo.png', style: 'height: 30px'), root_path, class: 'navbar-brand'
      button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
        span class="navbar-toggler-icon"
      div class="collapse navbar-collapse" id="navbarSupportedContent"
        ul class="navbar-nav mr-auto"
          / li class="nav-item active" = link_to 'Public Sale', '#', class: 'nav-link'
          / li class="nav-item active" = link_to 'Team', '#', class: 'nav-link'
          li class="nav-item"
            a href='#description' class='nav-link' About
          li class="nav-item"
            a href='#community' class='nav-link' Community
          li class="nav-item"
            a href='#roadmap' class='nav-link' Roadmap
          li class="nav-item"
            a href='#team' class='nav-link' Team
          li class="nav-item"
            a href='#updates' class='nav-link' Subscribe
          / li class="nav-item active" = link_to 'aassioX', '#', class: 'nav-link'
          / li class="nav-item active" = link_to 'aassioHome', '#', class: 'nav-link'
          / li class="nav-item active" = link_to 'aassioLife', '#', class: 'nav-link'
        ul class="navbar-nav my-2 my-lg-0"
          li class="nav-item active" = link_to 'White Paper', 'https://docs.wixstatic.com/ugd/f3ddb9_2567159825094b4d9acf0331ec0b88c1.pdf', class: 'nav-link btn btn-success btn-sm', target: '_blank'
